<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/message_profile_image"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/profile_image"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/receiver_messages_layout"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="50dp"
                android:minWidth="75dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/receiver_message_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="receiver messages"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:textColor="@android:color/background_light"/>
                <ImageView
                    android:id="@+id/receiver_image_messages"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="5dp"
                    app:srcCompat="@drawable/profile_image"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/receiver_message_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:layout_marginEnd="15dp"
                    android:text="10:10"
                    android:textColor="@android:color/background_light"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/receiver_translated_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/receiver_translated_message_layout"
            android:text="receiver translated messages"
            android:padding="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="45dp"
            android:textSize="14sp"
            android:textColor="@android:color/background_light"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sender_messages_layout"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"
            android:layout_gravity="end"
            android:minWidth="75dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/sender_message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sender messages"
                android:padding="10dp"
                android:textSize="14sp"
                android:textColor="@android:color/background_light"/>
            <ImageView
                android:id="@+id/sender_image_messages"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="5dp"
                app:srcCompat="@drawable/profile_image"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/sender_message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:paddingEnd="15dp"
                android:text="10:10"
                android:textColor="@android:color/background_light"
                android:textSize="12sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/sender_translated_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sender_translated_message_layout"
            android:text="sender messages"
            android:padding="10dp"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            android:layout_gravity="end"
            android:textColor="@android:color/background_light"/>
    </LinearLayout>
</LinearLayout>