<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.abuTawfeek.diaaldinkr.friendat">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:debuggable="false"
        android:theme="@style/AppTheme"
        tools:ignore="HardcodedDebugMode">
        <activity android:name="com.abuTawfeek.diaaldinkr.friendat.VideoViewer"></activity>
        <activity android:name="com.abuTawfeek.diaaldinkr.friendat.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.abuTawfeek.diaaldinkr.friendat.LoginActivity" />
        <activity android:name="com.abuTawfeek.diaaldinkr.friendat.RegisterActivity" />
        <activity
            android:name="com.abuTawfeek.diaaldinkr.friendat.SettingsActivity"
            android:parentActivityName="com.abuTawfeek.diaaldinkr.friendat.MainActivity" />
        <activity
            android:name="com.abuTawfeek.diaaldinkr.friendat.FindFriendsActivity"
            android:parentActivityName="com.abuTawfeek.diaaldinkr.friendat.MainActivity" />
        <activity
            android:name="com.abuTawfeek.diaaldinkr.friendat.GroupChatActivity"
            android:parentActivityName="com.abuTawfeek.diaaldinkr.friendat.MainActivity" />
        <activity android:name="com.abuTawfeek.diaaldinkr.friendat.PhoneLoginActivity" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.crop" />
        <activity android:name="com.abuTawfeek.diaaldinkr.friendat.ProfileActivity" />
        <activity
            android:name="com.abuTawfeek.diaaldinkr.friendat.ChatActivity"
            android:parentActivityName="com.abuTawfeek.diaaldinkr.friendat.MainActivity" />
        <activity
            android:name="com.abuTawfeek.diaaldinkr.friendat.CreateGroupActivity"
            android:parentActivityName="com.abuTawfeek.diaaldinkr.friendat.MainActivity" />
        <activity android:name="com.abuTawfeek.diaaldinkr.friendat.ImageViewerActivity" />
    </application>

</manifest>